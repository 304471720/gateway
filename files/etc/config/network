
config interface 'loopback'
	option ifname 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config interface 'lan'
	option type 'bridge'
	option proto 'static'
	option ipaddr '192.168.21.1'
	option netmask '255.255.255.0'
	option ifname 'eth1.1'

config interface 'wifi'
	option type 'bridge'
	option proto 'static'
	option ipaddr '192.168.19.1'
	option netmask '255.255.255.0'
	option ifname 'eth1.2'

config interface 'wan'
	option ifname 'eth0'
	option proto 'dhcp'

config switch
	option name 'eth1'
	option reset '1'
	option enable_vlan '1'

config switch_vlan
	option device 'eth1'
	option vlan '1'
	option ports '0t 1 2 3 4'
	option vid '1'

config switch_vlan
	option device 'eth1'
	option vlan '2'
	option vid '2'
	option ports '0t'
