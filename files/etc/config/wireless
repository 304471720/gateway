
config wifi-device 'radio0'
	option type 'mac80211'
	option phy 'phy0'
	option channel '11'
	option hwmode '11ng'
	option htmode 'HT20'
	list ht_capab 'LDPC'
	list ht_capab 'SHORT-GI-20'
	list ht_capab 'SHORT-GI-40'
	list ht_capab 'TX-STBC'
	list ht_capab 'RX-STBC1'
	list ht_capab 'DSSS_CCK-40'
	option disabled '0'
	option txpower '20'
	option country 'US'

config wifi-iface
	option device 'radio0'
	option mode 'ap'
	option network 'wifi'
	option encryption 'none'
	option isolate '1'
	option ssid 'WiFiSong-6771'

config wifi-iface
	option device 'radio0'
	option mode 'ap'
	option network 'lan'
	option encryption 'psk-mixed'
	option key '88888888'
	option isolate '1'
	option ssid 'WiFiSong-Office'

config wifi-iface
	option device 'radio0'
	option network 'wifi'
	option mode 'ap'
	option ssid 'WiFiSong_Free_WiFi'
	option encryption 'none'
	option isolate '1'
	option hidden '1'

